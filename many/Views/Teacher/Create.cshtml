@model many.Models.Teacher

@{ 
    ViewData["Title"] = "Create";
}

<h1> Create</h1>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="form-text"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-body"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(Model => Model.Faculty, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(Model => Model.Faculty, new SelectList(Enum.GetValues(typeof(Faculty))), new { @class = "form-control" })
                <span asp-validation-for="Faculty" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="save" class="text-body" />
            </div>
        </form>
    </div>
</div>