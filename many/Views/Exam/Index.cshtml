@model IEnumerable<many.Models.Exam>
@{ 
    ViewData["Title"] = "Index";
}   
<h1> Index </h1>
<a asp-action="Create" class="btn btn-success"> Create Here</a>
<br />
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(c => c.ExamName)</th>
            <th>@Html.DisplayNameFor(c => c.GradeName)</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(c => item.ExamName)</td>
                    <td>@Html.DisplayFor(c => item.GradeName)</td>
                    <td>
                        <a asp-action="Delete"class="btn btn-danger" asp-route-id="@item.Id"> Delete</a>
                    </td>
                </tr>
            }
    </tbody>
</table>