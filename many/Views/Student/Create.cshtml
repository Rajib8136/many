@model many.ViewModel.StudentViewModel
@{ 
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger "></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
           <div>
               @for(var i = 0; i < Model.courseViewModels.Count; i++)
            {
                <div class="checkbox-inline">
                    <input type ="checkbox" asp-for="@Model.courseViewModels[i].IsChecked" />
                    <input type ="hidden" asp-for="@Model.courseViewModels[i].Name" />
                    <input type="hidden" asp-for="@Model.courseViewModels[i].Id" />
                    <label asp-for="@Model.courseViewModels[i].IsChecked">@Model.courseViewModels[i].Name</label>
                </div>
            }
           </div>
            <div>
                @foreach(var item in Model.ExamViewModels)
            {
                <div class="form-group">
                    <label asp-for="@item.ExamName" class="control-label"></label>
                    <input asp-for="@item.ExamName" class="form-control" />
                    <span asp-validation-for="@item.ExamName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@item.GradeName" class="control-label"></label>
                    <input asp-for="@item.GradeName" class="form-control" />
                    <span asp-validation-for="@item.GradeName" class="text-danger"></span>
                </div>
            }
                
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="text-body" />
            </div>
        </form>
    </div>
</div>